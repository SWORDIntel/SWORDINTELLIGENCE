            </div>

            <div class="footer-section">
                <h4>Legal</h4>
                <ul>
                    <li><a href="/privacy">Privacy Policy</a></li>
                    <li><a href="/terms">Terms of Service</a></li>
                    <li><a href="/methods">Lawful Methods</a></li>
                </ul>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="container">
                <p>&copy; @DateTime.Now.Year SWORD Intelligence. All rights reserved.</p>
                <p class="security-notice">ðŸ”’ ML-KEM-1024 Post-Quantum Encrypted</p>
            </div>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        function toggleTheme() {
            const html = document.documentElement;
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'ops' ? 'advisory' : 'ops';
            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
        }

        // Load theme preference
        const savedTheme = localStorage.getItem('theme') || 'ops';
        document.documentElement.setAttribute('data-theme', savedTheme);
    </script>
</body>
</html>
